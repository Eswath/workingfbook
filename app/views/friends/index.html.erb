<p id="notice"><%= notice %></p>

<h1>Friends</h1>

<table>
  <thead>
    <tr>
      <th>Friends</th>
     <!--  <th>Sender</th>
      <th>Status</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @pending_friends.each do |friend| %>
      <tr>
        <td><%= friend.email %></td>
        <td>
        
        <%= Friend.find_by(:acceptor => current_user.id, :sender => friend.id).id %>
        <td><%= link_to 'Accept Request', friend_path(Friend.find_by(:acceptor => current_user.id, :sender => friend.id).id, friend: {status: "TRUE"}), method: :put %></td>
</td>
        <td><%= link_to 'Decline Request', friend_path(Friend.find_by(:acceptor => current_user.id, :sender => friend.id).id, friend: {status: "DECLINED"}), method: :put %></td>
        
      </tr>
      <% end %>
       <% @pending_friends_at_sender.each do |friend| %>
      <tr>
        <td><%= friend.email %><%= "(Pending)" %></td>
        <td>
        <%= link_to 'Message' %>
        </td>
      </tr>
      <% end %>
      <% @accepted_friends.each do |friend| %>
      <tr>
        <td><%= friend.email %></td>
        <td>
        <%= link_to 'Message' %>
        </td>
      </tr>
      <% end %>
      <% @accepted_friends_at_sender.each do |friend| %>
      <tr>
        <td><%= friend.email %></td>
        <td>
        <%= link_to 'Message' %>
        </td>
      </tr>
      <% end %>   
  </tbody>
  <tbody>
</table>

